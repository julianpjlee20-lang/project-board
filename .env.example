# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/project_board

# Discord OAuth (如果使用 Discord 登入)
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
DISCORD_REDIRECT_URI=http://localhost:3000/api/auth/discord/callback

# NextAuth (如果使用驗證)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Application
NODE_ENV=development
PORT=3000

# LINE Login
LINE_LOGIN_CHANNEL_ID=your_line_login_channel_id
LINE_LOGIN_CHANNEL_SECRET=your_line_login_channel_secret
LINE_LOGIN_REDIRECT_URI=http://localhost:3000/api/auth/line/callback

# LINE Messaging API
LINE_MESSAGING_CHANNEL_ACCESS_TOKEN=your_line_messaging_channel_access_token

# Discord Webhook (通知用)
DISCORD_WEBHOOK_URL=your_discord_webhook_url
